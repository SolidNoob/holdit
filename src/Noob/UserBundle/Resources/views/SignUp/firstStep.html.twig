{% extends ":default:layout.html.twig" %}

{% block title %} Inscription - Etape 1 | {{ parent() }} {% endblock %}

{% block content %}
<div class="board violet">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <header>
                  <h1><span class="xl-size">Créer un compte</span></h1>
                </header>
            </div>
        </div>
    </div>
</div>
<div class="grey">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-xs-12">
                <div class='form-signin-wrapper'>
                    <div class="form-signin">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class='text-right'>Créer un compte: étape 1/3</div>
                                {% if app.session.get('roleSlug') == 'etudiant' %}
                                    {% include 'NoobUserBundle:SignUp:studentForm.html.twig' with {'form':form} %}
                                {% elseif app.session.get('roleSlug') == 'entreprise' %}
                                    {% include 'NoobUserBundle:SignUp:entrepriseForm.html.twig' with {'form':form} %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div>
</div>
{% endblock %}